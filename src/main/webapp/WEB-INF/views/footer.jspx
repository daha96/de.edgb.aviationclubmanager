  <sec:authorize access="isAuthenticated()">
  <div style="float:clear;text-align: center;margin-top: 50px;padding: 5px;border: solid #f00;font-weight: bold;">
    	<p><spring:message code="report_bug_message" /></p>
    	<br />
    	<p><spring:url value="/bugs?form" var="bug_link"/>
      			<a href="${bug_link}">
        			<spring:message code="report_bug_title"/>
      			</a></p>
    </div>
    </sec:authorize>
</div>
